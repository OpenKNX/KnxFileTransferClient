          "OpenKNXProducer": {
            "SourcePath": "tools/MacOS/KnxFileTransferClient",
            "DestinationPath": "/usr/local/bin/KnxFileTransferClient"
          }
        },
        "ExecuteCommand1": "chmod +x /usr/local/bin/KnxFileTransferClient"
      },
      "Linux": {
        "FilesAndFolders": {
          "OpenKNXProducer": {
            "SourcePath": "tools/Linux/KnxFileTransferClient",
